{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "plugins": [{ "transform": "ts-transform-paths" }],
    "declaration": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@middleware/*": ["src/middleware/*"],
      "@configs/*": ["src/configs/*"],
      "@controllers/*": ["src/controllers/*"],
      "@db/*": ["src/db/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@schema/sql/*": ["src/models/mysql/*"],
      "@schema/pg/*": ["src/models/pg/*"],
      "@types/*": ["src/libs/types/*"],
      "@libs/*": ["src/libs/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}